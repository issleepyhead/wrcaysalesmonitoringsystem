<Application x:Class="WrcaySalesInventorySystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WrcaySalesInventorySystem"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources RequestedTheme="Dark" AccentColor="LightSlateGray"/>
                <hc:Theme/>

                <ResourceDictionary Source="/Resources/strings/strings.xaml"/>
                <ResourceDictionary Source="/Resources/styles/style.xaml"/>
                <ResourceDictionary Source="/Resources/colors/colors.xaml"/>
                <ResourceDictionary Source="/Resources/imgs/img.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
