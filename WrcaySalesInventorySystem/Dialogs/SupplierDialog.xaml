<UserControl x:Class="WrcaySalesInventorySystem.Dialogs.SupplierDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WrcaySalesInventorySystem.Dialogs"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             Width="500">

    <Grid Background="{StaticResource ApplicationLight}">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <hc:SimplePanel Background="{StaticResource ApplicationPrimaryDark}">
            <TextBlock Text="Supplier"
                       Foreground="{StaticResource ApplicationLight}"
                       FontSize="24"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="30 0 0 0"/>
            <Button Name="Closebtn"
                    Height="30"
                    Width="30"
                    Style="{StaticResource ButtonIcon}"
                    hc:IconElement.Geometry="{StaticResource ErrorGeometry}"
                    Command="hc:ControlCommands.Close"
                    Margin="0 0 30 0"
                    Padding="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"/>
        </hc:SimplePanel>
        <StackPanel Orientation="Vertical"
                    Grid.Row="1"
                    Margin="30 8"
                    VerticalAlignment="Center">
            <StackPanel Margin="0 8 0 0">
                <!--<TextBlock HorizontalAlignment="Left"
                           Text="SUPPLIER NAME: "
                           FontSize="18"
                           Padding="0 0 0 5"
                           FontWeight="Bold"/>-->
                <hc:TextBox Name="SupplierNameTextBox"
                         HorizontalAlignment="Stretch"
                         hc:BorderElement.CornerRadius="0"
                            hc:InfoElement.Placeholder="Supplier Name"
                         Height="40"/>
            </StackPanel>
            <StackPanel Margin="0 15 0 0">
                <!--<TextBlock HorizontalAlignment="Left"
                           Text="SUPPLIER ADDRESS: "
                           FontSize="18"
                           Padding="0 0 0 5"
                           FontWeight="Bold"/>-->
                <hc:TextBox Name="SupplierAddressTextBox"
                         HorizontalAlignment="Stretch"
                         hc:BorderElement.CornerRadius="0"
                            hc:InfoElement.Placeholder="Address"
                         Height="40" InputScope="AddressCity"/>
            </StackPanel>
            <StackPanel Margin="0 15 0 0">
                <!--<TextBlock HorizontalAlignment="Left"
                           Text="SUPPLIER CONTACT: "
                           FontSize="18"
                           Padding="0 0 0 5"
                           FontWeight="Bold"/>-->
                <hc:TextBox Name="SupplierContactTextBox"
                         HorizontalAlignment="Stretch"
                            hc:InfoElement.Placeholder="Phone e.g 09XX XXX XXXX"
                         hc:BorderElement.CornerRadius="0"
                         Height="40" InputScope="Default"/>
            </StackPanel>
        </StackPanel>
        <hc:SimplePanel Grid.Row="2">
            <hc:FlexPanel JustifyContent="FlexEnd">
                <Button Name="DeleteButton"
                        Margin="0 0 10 0"
                        Foreground="#fff"
                        FontSize="16"
                        hc:BorderElement.CornerRadius="0"
                        Content="Delete"
                        Height="40"
                        Width="140"
                        BorderThickness="0"
                        Background="{StaticResource ApplicationPrimaryDark}"/>

                <Button Name="SaveButton"
                        Margin="0 0 30 0"
                        Foreground="#fff"
                        FontSize="16"
                        hc:BorderElement.CornerRadius="0"
                        Content="Save"
                        Height="40"
                        Width="140"
                        BorderThickness="0"
                        Background="{StaticResource ApplicationPrimaryDark}"/>
            </hc:FlexPanel>
        </hc:SimplePanel>
    </Grid>
</UserControl>
