<UserControl x:Class="WrcaySalesInventorySystem.Dialogs.ProductDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WrcaySalesInventorySystem.Dialogs"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d"
             Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <hc:SimplePanel Background="{StaticResource ApplicationDimBlue}">
            <TextBlock Text="Product"
                       Foreground="{StaticResource ApplicationLight}"
                       FontSize="24"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="30 0 0 0"/>
            <Button Name="Closebtn"
                    Height="30"
                    Width="30"
                    Style="{StaticResource ButtonIcon}"
                    Command="hc:ControlCommands.Close"
                    Margin="0 0 30 0"
                    Padding="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"/>
        </hc:SimplePanel>
        <StackPanel Orientation="Vertical"
                    Grid.Row="1"
                    Margin="30 8"
                    VerticalAlignment="Center">
            <StackPanel>
                <!--<TextBlock HorizontalAlignment="Left"
                           Text="CATEGORY: "
                           FontSize="18"
                           Padding="0 0 0 5"
                           FontWeight="Bold"/>-->
                <hc:ComboBox Name="CategoryComboBox"
                         HorizontalAlignment="Stretch"
                         hc:BorderElement.CornerRadius="0"
                         Height="40"
                             hc:InfoElement.Placeholder="Select category"
                         IsEditable="True"/>
            </StackPanel>
            <StackPanel Margin="0 15 0 0">
                <!--<TextBlock HorizontalAlignment="Left"
                           Text="PRODUCT NAME : "
                           FontSize="18"
                           Padding="0 0 0 5"
                           FontWeight="Bold"/>-->
                <hc:TextBox Name="ProductNameTextBox"
                         Text="{Binding PRODUCT_NAME}"
                         HorizontalAlignment="Stretch"
                         hc:BorderElement.CornerRadius="0"
                            hc:InfoElement.Placeholder="Product Name"
                         Height="40"/>
            </StackPanel>
            <StackPanel Margin="0 15 0 0">
                <!--<TextBlock HorizontalAlignment="Left"
                           Text="PRODUCT DESCRIPTION: "
                           FontSize="18"
                           Padding="0 0 0 5"
                           FontWeight="Bold"/>-->
                <hc:TextBox Name="ProductDescriptionTextBox"
                         Text="{Binding PRODUCT_DESCRIPTION}"
                         HorizontalAlignment="Stretch"
                         hc:BorderElement.CornerRadius="0"
                         hc:InfoElement.Placeholder="Description"
                         Height="40"/>
            </StackPanel>
            <StackPanel Margin="0 15 0 0">
                <!--<TextBlock HorizontalAlignment="Left"
                           Text="PRODUCT PRICE: "
                           FontSize="18"
                           Padding="0 0 0 5"
                           FontWeight="Bold"/>-->
                <hc:TextBox Name="ProductPriceTextBox"
                         Text="{Binding PRICE}"
                         HorizontalAlignment="Stretch"
                         hc:BorderElement.CornerRadius="0"
                         Height="40" InputScope="Number"
                            hc:InfoElement.Placeholder="Price"/>
            </StackPanel>
            <StackPanel Margin="0 15 0 0">
                <!--<TextBlock HorizontalAlignment="Left"
                           Text="PRODUCT COST: "
                           FontSize="18"
                           Padding="0 0 0 5"
                           FontWeight="Bold"/>-->
                <hc:TextBox Name="ProductCostTextBox"
                         Text="{Binding COST_PRICE}"
                         HorizontalAlignment="Stretch"
                         hc:BorderElement.CornerRadius="0"
                         hc:InfoElement.Placeholder="Cost price"
                         Height="40" InputScope="Number"/>
            </StackPanel>
        </StackPanel>
        <hc:SimplePanel Grid.Row="2">
            <hc:FlexPanel JustifyContent="FlexEnd">
                <Button Name="DeleteButton"
                        Margin="0 0 10 0"
                        Foreground="#fff"
                        FontSize="16"
                        hc:BorderElement.CornerRadius="0"
                        Content="Delete"
                        Height="40"
                        Width="140"
                        BorderThickness="0"
                        Background="{StaticResource ApplicationPrimaryDark}"/>
                <Button Name="SaveButton"
                        Margin="0 0 30 0"
                        Foreground="#fff"
                        FontSize="16"
                        hc:BorderElement.CornerRadius="0"
                        Content="Save"
                        Height="40"
                        Width="140"
                        BorderThickness="0"
                        Background="{StaticResource ApplicationPrimaryDark}"/>
            </hc:FlexPanel>
        </hc:SimplePanel>
    </Grid>
</UserControl>
