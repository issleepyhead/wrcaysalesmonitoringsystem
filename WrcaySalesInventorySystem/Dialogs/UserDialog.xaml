<UserControl x:Class="WrcaySalesInventorySystem.Dialogs.UserDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WrcaySalesInventorySystem.Dialogs"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             Width="694">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <hc:SimplePanel Background="{StaticResource ApplicationDimBlue}">
            <TextBlock Text="Account"
                       Foreground="{StaticResource ApplicationLight}"
                       FontSize="24"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="30 0 0 0"/>
            <Button Name="Closebtn"
                    Height="30"
                    Width="30"
                    Style="{StaticResource ButtonIcon}"
                    hc:IconElement.Geometry="{StaticResource ErrorGeometry}"
                    Command="hc:ControlCommands.Close"
                    Margin="0 0 30 0"
                    Padding="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"/>
        </hc:SimplePanel>
        <StackPanel Orientation="Vertical"
            Grid.Row="1"
            Margin="30 8"
            VerticalAlignment="Center">

            <Grid Margin="0 15 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0"
                    Margin="0 0 5 0">
                    <hc:TextBox Name="FirstNameTextBox"
                             HorizontalAlignment="Stretch"
                             hc:BorderElement.CornerRadius="0"
                             Height="40"
                             hc:InfoElement.Placeholder="First Name"/>
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Margin="5 0 0 0">
                    <!--<TextBlock HorizontalAlignment="Left"
                               Text="LAST NAME: "
                               FontSize="18"
                               Padding="0 0 0 5"
                               FontWeight="Bold"/>-->
                    <hc:TextBox Name="LastNameTextBox"
                             hc:InfoElement.Placeholder="Last Name"
                             HorizontalAlignment="Stretch"
                             hc:BorderElement.CornerRadius="0"
                             Height="40"
                             hc:InfoElement.Necessary="True"
                             hc:InfoElement.RegexPattern="(^[^\p{P}0-9]$)(.*[A-Za-z].*)" InputScope="PersonalSurname"/>
                </StackPanel>
            </Grid>
            <Grid Margin="0 15 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0"
                            Margin="0 0 5 0">
                    <!--<TextBlock HorizontalAlignment="Left"
                               Text="ROLE: "
                               FontSize="18"
                               Padding="0 0 0 5"
                               FontWeight="Bold"/>-->
                    <hc:ComboBox Name="RoleComboBox"
                                 HorizontalAlignment="Stretch"
                                 hc:BorderElement.CornerRadius="0"
                                 IsEnabled="False"
                                 Height="40"
                                 hc:InfoElement.Placeholder="Role"/>
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Margin="5 0 0 0">
                    <!--<TextBlock HorizontalAlignment="Left"
                               Text="CONTACT : "
                               FontSize="18"
                               Padding="0 0 0 5"
                               FontWeight="Bold"/>-->
                    <hc:TextBox Name="ContactTextBox"
                             hc:InfoElement.Placeholder="09XX XXX XXXX"
                             HorizontalAlignment="Stretch"
                             hc:BorderElement.CornerRadius="0"
                             Height="40" InputScope="TelephoneNumber"/>
                </StackPanel>
            </Grid>
            <StackPanel Margin="0 15 0 0">
                <!--<TextBlock HorizontalAlignment="Left"
                           Text="ADDRESS: "
                           FontSize="18"
                           Padding="0 0 0 5"
                           FontWeight="Bold"/>-->
                <hc:TextBox Name="AddressTextBox"
                         HorizontalAlignment="Stretch"
                         hc:BorderElement.CornerRadius="0"
                         MinHeight="40"
                         MaxHeight="60"
                         TextWrapping="Wrap"
                         hc:InfoElement.Placeholder="Address"
                         Height="Auto" InputScope="AddressCity"/>
            </StackPanel>
            <Grid Margin="0 15 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0"
                            Margin="0 0 5 0">
                    <!--<TextBlock HorizontalAlignment="Left"
                               Text="USERNAME: "
                               FontSize="18"
                               Padding="0 0 0 5"
                               FontWeight="Bold"/>-->
                    <hc:TextBox Name="UsernameTextBox"
                             HorizontalAlignment="Stretch"
                             hc:BorderElement.CornerRadius="0"
                             Height="40"
                             hc:InfoElement.Placeholder="Username"
                             hc:InfoElement.RegexPattern="\w+{6, 20}"/>
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Margin="5 0 0 0">
                    <!--<TextBlock HorizontalAlignment="Left"
                               Text="PASSWORD: "
                               FontSize="18"
                               Padding="0 0 0 5"
                               FontWeight="Bold"/>-->
                    <hc:PasswordBox Name="PasswordTextBox"
                             HorizontalAlignment="Stretch"
                             hc:BorderElement.CornerRadius="0"
                             ShowEyeButton="True"
                             hc:InfoElement.Placeholder="Password"
                             Height="40"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        <hc:SimplePanel Grid.Row="2">
            <hc:FlexPanel JustifyContent="FlexEnd">
                <Button Name="DeleteButton"
                        Margin="0 0 10 0"
                        Foreground="#fff"
                        FontSize="16"
                        hc:BorderElement.CornerRadius="0"
                        Content="Delete"
                        Height="40"
                        Width="140"
                        BorderThickness="0"
                        Background="{StaticResource ApplicationPrimaryDark}"/>
                <Button Name="SaveButton"
                        Margin="0 0 30 0"
                        Foreground="#fff"
                        FontSize="16"
                        hc:BorderElement.CornerRadius="0"
                        Content="Add"
                        Height="40"
                        Width="140"
                        BorderThickness="0"
                        Background="{StaticResource ApplicationPrimaryDark}"/>
            </hc:FlexPanel>
        </hc:SimplePanel>
    </Grid>
</UserControl>
