<UserControl x:Class="WrcaySalesInventorySystem.custom.InventoryPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WrcaySalesInventorySystem.custom"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Background="{StaticResource ApplicationLight}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <hc:FlexPanel Grid.Row="0"
                                  JustifyContent="SpaceBetween"
                                  Margin="15 0">
                <hc:SearchBar x:Name="SearchInventoryRecords"
                                      IsRealTime="True"
                                      hc:InfoElement.Placeholder="Search Product"
                                      Width="280"
                                      Height="30"
                                      VerticalAlignment="Center"
                                      Style="{StaticResource SearchBarExtend}"/>
                <hc:Pagination Name="PaginationRecords"
                           MaxPageCount="10"
                           PageIndex="1"
                           MaxPageInterval="3"
                           DataCountPerPage="15"
                           VerticalAlignment="Center"
                           hc:BorderElement.CornerRadius="0" PageUpdated="PaginationRecords_PageUpdated"/>
            </hc:FlexPanel>
            <DataGrid RowStyle="{DynamicResource CustomDataGridRowStyle}"
                              ColumnHeaderStyle="{DynamicResource CustomDataGridColumnHeaderStyle}"
                              CellStyle="{DynamicResource CustomDataGridCellStyle}"
                              hc:Empty.ShowEmpty="True"
                              Padding="0"
                              IsReadOnly="True"
                              CanUserResizeColumns="False"
                              AutoGenerateColumns="False"
                              Grid.Row="1"
                              Margin="15 8 15 10"
                              Name="InventoryRecordsDataGrid" RowHeight="30">
                <DataGrid.Columns>
                    <DataGridTextColumn FontSize="13"
                                        Header="Product"
                                        Binding="{Binding ProductName}"
                                        Width="*"/>
                    <DataGridTextColumn FontSize="13"
                                        Header="Price"
                                        Binding="{Binding ProductPrice}"
                                        Width="*"/>
                    <DataGridTextColumn FontSize="13"
                                        Header="Defective"
                                        Binding="{Binding Defective}"
                                        Width="*"/>
                    <DataGridTextColumn FontSize="13"
                                        Header="Available"
                                        Binding="{Binding StocksAvailable}"
                                        Width="*"/>
                    <DataGridTextColumn FontSize="13"
                                        Header="Sold"
                                        Binding="{Binding StocksSold}"
                                        Width="*"/>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
