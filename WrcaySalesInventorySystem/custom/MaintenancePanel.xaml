<UserControl x:Class="WrcaySalesInventorySystem.custom.MaintenancePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WrcaySalesInventorySystem.custom"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <hc:TabControl x:Name="TabControlContainer"
                       ShowCloseButton="False"
                       IsDraggable="False"
                       IsTabFillEnabled="True"
                       Grid.RowSpan="2">
            <hc:TabItem  Header="Accounts" Name="AccountTab">
                <local:AccountPanel/>
            </hc:TabItem>
            <hc:TabItem Header="Categories" Name="CategoryTab">
                <local:CategoryPanel/>
            </hc:TabItem>
            <hc:TabItem Header="Suppliers" Name="SupplierTab">
                <local:SupplierPanel/>
            </hc:TabItem>
            <hc:TabItem Header="Delivery">
                <local:DeliveryPanel/>
            </hc:TabItem>
        </hc:TabControl>
    </Grid>
</UserControl>
